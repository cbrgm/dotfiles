[user]
	email = chris@cbrgm.net
	name = cbrgm
[alias]
	a = add
	addurl = remote set-url --add origin
	c = commit
	cm = commit -m
	co = checkout
	cob = !git checkout -b cbrgm-patch-$(openssl rand -hex 3)
	d = diff
	dc = diff --cached
	l = log
	lp = log --graph --pretty=format:'%Cred%h%Creset %Cblue%an%Creset: %s%Creset%C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	pl = pull
	ps = !git push -u origin $(git branch --show-current) 
	psf = push --force
	s = status --short
	sh = stash
	shp = stash pop
	st = status
        df = !git switch $(git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@')
[commit]
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
